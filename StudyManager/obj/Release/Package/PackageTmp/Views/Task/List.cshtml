@model List<StudyManager.ViewModels.TaskListVM>

@{
    ViewBag.Title = "Task List";
}

<h2>Task List</h2>

<table class="table table-striped table-hover ">
    <thead>
    <tr class="info">
            <th>Due</th>
            <th>Course Name</th>
            <th>Description</th>
            <th>Completion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DueDate</td>
                <td>@item.CourseName</td>
                <td>@item.TaskDescription</td>
                <td>
                         @if (item.Completion)
                         {
                             <span>Complete</span>
                         }
                         else
                         {
                             <span><a href="/Task/Complete/@item.TaskId">Not Complete</a></span>
                         }
                </td>

            </tr>

        }
    </tbody>
</table>
