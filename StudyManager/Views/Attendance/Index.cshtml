
@{
    ViewBag.Title = "Attendance Manager";
}

<h2>Attendance Manager</h2>

<form method="post" action="/Attendance/Create">@*Send data to the controller(/NameOfContoroller/NameOfActionMethod)*@

    <div class="form-group">
        <label for="Date">Date:</label>
        <input type="date" name="AttDate" class="form-control" id="Date">
    </div>
    
    <div class="form-group">
        <label>Attendance:</label>
        <div class="radio">
            <label><input type="radio" name="AttRecord" value="Attend" checked>Attend</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="AttRecord" value="Absence">Absence</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="AttRecord" value="Holiday">Holiday</label>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
